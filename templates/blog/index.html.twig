{% extends "layout/app.html.twig" %}
{% block CUSTOM_CSS %}

{% endblock %}

{% block CONTENT_MID %}
    <div class="container" style="margin-top: 150px !important;">

        {% if data is defined and data is not empty %}



        <div class="row g-5">
            <div class="col-md-8">
                <div class="row">
                    {% for post in data %}
                            {% include 'blog/blog_post.html.twig' with {'data': post} %}
                    {% endfor %}
                </div>
            </div>
            {{ pimcore_inc(document.getProperty('cats')) }}
        </div>
            {% else %}
                <h1>Requested page does not contain data</h1>
                <hr style="margin-bottom: 100px !important;">
                <h2>Try search</h2>
                <form class="d-flex" method="post" action="/search">
                    <input type="hidden" name="csrf" value="{{ csrf_token('csrf') }}">
                    <input class="form-control me-2" type="search" name="keyword" placeholder="Search blog posts" aria-label="Search blog posts">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
                <hr style="margin:   100px 0 100px 0 !important;">
                <h2>Find By Category</h2>
                {{ pimcore_inc(document.getProperty('cats')) }}


        {% endif %}


{% endblock %}

{% block CUSTOM_JS %}

{% endblock %}

